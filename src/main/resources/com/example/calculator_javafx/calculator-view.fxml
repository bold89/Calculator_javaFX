<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="345.0" prefWidth="281.0" spacing="10.0" style="-fx-background-color: black;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.calculator_javafx.CalculatorController">
    <padding>
        <Insets top="10.0"/>
    </padding>
    <TextField fx:id="text_Display" alignment="BASELINE_CENTER" prefHeight="40.0" prefWidth="100.0" promptText="0.00">
        <padding>
            <Insets bottom="10.0" left="10.0" top="10.0"/>
        </padding>
        <font>
            <Font name="Times New Roman Bold" size="20.0"/>
        </font>
    </TextField>
    <HBox alignment="BASELINE_CENTER" prefHeight="70.0" prefWidth="100.0" spacing="15.0">
        <children>
            <Button fx:id="btn_7" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="7"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_8" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="8"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_9" layoutX="88.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButtonAction"
                    prefHeight="55.0" text="9" textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_Plus" layoutX="140.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#handleButtonAction" prefHeight="55.0" style="-fx-background-color: cyan;" text="+"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
        </children>
    </HBox>
    <HBox alignment="BASELINE_CENTER" layoutX="30.0" layoutY="90.0" prefHeight="70.0" prefWidth="100.0" spacing="15.0">
        <children>
            <Button fx:id="btn_4" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="4"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_5" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="5"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_6" layoutX="88.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButtonAction"
                    prefHeight="55.0" text="6" textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_Minus" layoutX="140.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#handleButtonAction" prefHeight="55.0" style="-fx-background-color: yellow;" text="-"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
        </children>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </HBox>
    <HBox alignment="BASELINE_CENTER" layoutX="10.0" layoutY="123.0" prefHeight="70.0" prefWidth="100.0" spacing="15.0">
        <children>
            <Button fx:id="btn_1" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="1"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_2" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="2"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_3" layoutX="88.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButtonAction"
                    prefHeight="55.0" text="3" textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_Multi" layoutX="140.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#handleButtonAction" prefHeight="55.0" style="-fx-background-color: #ef10d5;" text="*"
                    textAlignment="CENTER" textFill="#edf2ed">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
        </children>
    </HBox>
    <HBox alignment="BASELINE_CENTER" layoutX="10.0" layoutY="177.0" prefHeight="70.0" prefWidth="100.0" spacing="15.0">
        <children>
            <Button fx:id="btn_0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" text="0"
                    textAlignment="CENTER">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_Equals" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0"
                    style="-fx-background-color: orange;" text="=" textAlignment="CENTER" textFill="#fdf0fb">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_Clear" layoutX="88.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#handleButtonAction" prefHeight="55.0" style="-fx-background-color: red;" text="C"
                    textAlignment="CENTER" textFill="#f4f2f2">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
            <Button fx:id="btn_Div" layoutX="140.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#handleButtonAction" prefHeight="55.0" style="-fx-background-color: blue;" text="/"
                    textAlignment="CENTER" textFill="#f6f3f3">
                <font>
                    <Font name="Times New Roman Bold" size="30.0"/>
                </font>
            </Button>
        </children>
    </HBox>
</VBox>